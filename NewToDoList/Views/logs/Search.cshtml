@model IEnumerable<NewToDoList.Models.log>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hoạt động</h2>
@using (Html.BeginForm("Search", "logs", FormMethod.Get))
{
   
    <p>
        <span>Từ: <input type="date" name="NBD" /></span>
        <span>Đến: <input type="date" name="NKT" /></span>
        <input type="submit" />
    </p>
}

<table id="table_logs" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoatDong)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Bang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThoiGian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanVien.HoTen)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HoatDong)</td>
                <td>@Html.DisplayFor(modelItem => item.Bang)</td>
                <td>@Html.DisplayFor(modelItem => item.ThoiGian)</td>
                <td>@Html.DisplayFor(modelItem => item.NhanVien.HoTen)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.id }) |</td>

            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_logs').DataTable();
        });
    </script>
}